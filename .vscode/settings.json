{
  "black-formatter.args": [
    "--line-length=100"
  ],
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.codeAnalysis.clangTidy.config": "",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.exclude": {
    "build/**": true,
    "platforms/**": true,
  },
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.includePath": [
    "${workspaceRoot}",
    "${default}",
  ],
  "clang-format.language.c.enable": false,
  "clang-format.language.cpp.enable": false,
  "clang-format.style": "file",
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  "cmake.automaticReconfigure": false,
  "cmake.enableAutomaticKitScan": false,
  "csharp.format.enable": false,
  "dotnet.defaultSolution": "platforms/unity/unity.sln",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/*.3ds": true,
    "**/*.3DS": true,
    "**/*.asset": true,
    "**/*.booproj": true,
    "**/*.cubemap": true,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.fbx": true,
    "**/*.FBX": true,
    "**/*.flare": true,
    "**/*.gif": true,
    "**/*.ico": true,
    "**/*.jpeg": true,
    "**/*.jpg": true,
    "**/*.lxo": true,
    "**/*.LXO": true,
    "**/*.ma": true,
    "**/*.MA": true,
    "**/*.mat": true,
    "**/*.meta": true,
    "**/*.mid": true,
    "**/*.midi": true,
    "**/*.obj": true,
    "**/*.OBJ": true,
    "**/*.pdf": true,
    "**/*.pidb": true,
    "**/*.png": true,
    "**/*.prefab": true,
    "**/*.psd": true,
    "**/*.suo": true,
    "**/*.tga": true,
    "**/*.tif": true,
    "**/*.tiff": true,
    "**/*.unity": true,
    "**/*.unityproj": true,
    "**/*.user": true,
    "**/*.userprefs": true,
    "**/*.wav": true,
    "library/": true,
    "Library/": true,
    "obj/": true,
    "Obj/": true,
    "ProjectSettings/": true,
    "temp/": true,
    "Temp/": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "dotnet.preferCSharpExtension": true,
}
