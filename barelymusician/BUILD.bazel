load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

cc_library(
    name = "barelymusician",
    srcs = ["barelymusician.cpp"],
    defines = ["BARELYMUSICIAN_EXPORTS"],
    deps = [
        ":barelymusician_headeronly",
        ":event",
        ":find_or_null",
        ":instrument",
        ":mutable_data",
        ":parameter",
        ":sequence",
        ":transport",
