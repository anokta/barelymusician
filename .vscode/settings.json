{
  "bazel.buildifierFixOnFormat": true,
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.codeAnalysis.clangTidy.config": "",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.exclude": {
    "bazel-*/**": true,
    "build*/**": true,
    "cmake-*/**": true,
    // TODO(#123): This requires `libDaisy` to be included in `includePath` below.
    "platforms/daisy/**": true,
    "platforms/unity/**": true,
  },
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.includePath": [
    "${workspaceRoot}",
    "${workspaceRoot}/bazel-barelymusician/external/dr_libs",
    "${workspaceRoot}/bazel-barelymusician/external/googletest/googlemock/include",
    "${workspaceRoot}/bazel-barelymusician/external/googletest/googletest/include",
    "${workspaceRoot}/bazel-barelymusician/external/midifile/include",
    "${workspaceRoot}/bazel-barelymusician/external/portaudio/include",
    "${workspaceRoot}/bazel-barelymusician/external/bazel_tools",
    "${default}",
  ],
  "clang-format.language.c.enable": true,
  "clang-format.language.c.style": "file",
  "clang-format.language.cpp.enable": true,
  "clang-format.language.cpp.style": "file",
  "clang-format.style": "Google",
  "csharp.format.enable": false,
  "dotnet.defaultSolution": "platforms/unity/unity.sln",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/*.3ds": true,
    "**/*.3DS": true,
    "**/*.asset": true,
    "**/*.booproj": true,
    "**/*.cubemap": true,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.fbx": true,
    "**/*.FBX": true,
    "**/*.flare": true,
    "**/*.gif": true,
    "**/*.ico": true,
    "**/*.jpeg": true,
    "**/*.jpg": true,
    "**/*.lxo": true,
    "**/*.LXO": true,
    "**/*.ma": true,
    "**/*.MA": true,
    "**/*.mat": true,
    "**/*.meta": true,
    "**/*.mid": true,
    "**/*.midi": true,
    "**/*.obj": true,
    "**/*.OBJ": true,
    "**/*.pdf": true,
    "**/*.pidb": true,
    "**/*.png": true,
    "**/*.prefab": true,
    "**/*.psd": true,
    "**/*.suo": true,
    "**/*.tga": true,
    "**/*.tif": true,
    "**/*.tiff": true,
    "**/*.unity": true,
    "**/*.unityproj": true,
    "**/*.user": true,
    "**/*.userprefs": true,
    "**/*.wav": true,
    "**/bazel-*": true,
    "library/": true,
    "Library/": true,
    "obj/": true,
    "Obj/": true,
    "ProjectSettings/": true,
    "temp/": true,
    "Temp/": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
}
